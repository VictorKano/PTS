<% include partials/header.ejs %>
<div class="ui main text container">
    <div class="ui huge header">Residentes PTS</div>
    <a class="ui button" href="/residentes/cadastrar">Cadastrar Residente</a>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% residentes.forEach(function(residente){ %>
                <div class="item">
                    <div class="content">
                        <a class="header" href="/residentes/<%= residente._id %>"><%= residente.nome %></a>
                        <div class="meta">
                            <image class="image" src="<%= residente.image %>"></image>
                        </div>
                        <div class="meta">
                            <span><%= residente.cargo %></span>
                        </div>
                        <div class="meta">
                            <span><%= residente.empresa %></span>
                        </div>
                        <div class="meta">
                            <span><%= residente.email %></span>
                        </div>
                        <div class="meta">
                            <span><%= residente.telefone %></span>
                        </div>
                        <div class="description">
                            <p><%- residente.descricao.substring(0, 100) %>...</p>
                        </div>
                        <div class="meta">
                            <span><%= residente.created.toDateString() %></span>
                        </div>
                        <div class="extra">
                            <a class="ui floated basic violet button" href="/residentes/<%= residente._id %>">
                                Read More<i class="right chevron icon"></i></a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>



<% include partials/footer.ejs %>