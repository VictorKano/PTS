<% include partials/header.ejs %>

<div class="ui main text container segment">
    <div class="ui huge header">Mudar foto <%= gestores.nome %></div>
    <form class="ui form" action="/gestores/<%= gestores._id %>" method="POST" enctype="multipart/form-data">
        <div class="custom-file mb-3">
            <input type="file" name="file" id=file class="custom-file-input">
            <label for="file" class="custom-file-label">Choose File</label>
        </div>
        <input class="ui purple basic button" type="submit" value="Mudar Foto">
    </form>
    <form class="ui form" action="/gestores/<%= gestores._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Nome</label>
            <input type="text" name="gestor[nome]" placeholder="Nome" value="<%= gestores.nome %>">
        </div>
        <div class="field">
            <label>Cargo</label>
            <input type="text" name="gestor[cargo]" placeholder="Cargo" value="<%= gestores.cargo %>">
        </div>
        <div class="field">
            <label>E-Mail</label>
            <input type="text" name="gestor[email]" placeholder="E-Mail" value="<%= gestores.email %>">
        </div>
        <div class="field">
            <label>Telefone</label>
            <input type="text" name="gestor[telefone]" placeholder="Telefone" value="<%= gestores.telefone %>">
        </div>
        <div class="field">
            <labe>Descrição</labe>
            <textarea name="gestor[descricao]"><%= gestores.descricao %></textarea>
        </div>
        <input class="ui purple big basic button" type="submit">
        
    </form>
</div>

<% include partials/footer.ejs %>