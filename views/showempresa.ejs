<% include partials/header.ejs %>
<div class="ui main text container segment">
    <div class="ui huge header" center><%= empresa.nome %></div>
    <div class="ui top attached">
        <div class="item center">
            <div class="description">
                <image class="image" src="<%= empresa.image %>"></image>
            </div>
            <div class="description">
                <b>Descrição: </b>
                <p><%- empresa.descricao %></p>
            </div>
            <div class="description">
                <b>Objetivo: </b>
                <p><%- empresa.objetivo %></p>
            </div>
            <div class="description">
                <b>Projeto em Desenvolvimento: </b>
                <p><%- empresa.prjDensenvolvimento %></p>
            </div>
            <div class="description">
                <b>Projeto de Interesse: </b>
                <p><%- empresa.prjInteresse %></p>
            </div>
            <div class="description">
                <b>Área de Interesse: </b>
                <p><%- empresa.area %></p>
            </div>
            <div class="description">
                <b>Site: </b>
                <p><%- empresa.site %></p>
            </div>
            <a class="ui green basic button" href="/empresas/<%= empresa._id %>/edit">Edit</a>
            <form id="delete" action="/empresas/<%= empresa._id %>?_method=delete" method="POST">
                <button class="ui red basic button">Delete</button>
            </form>
        </div>
    </div>
</div>
<% include partials/footer.ejs %>