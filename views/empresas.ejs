<% include partials/header.ejs %>
<div class="ui main text container">
    <div class="ui huge header">Empresas PTS</div>
    <a href="/empresas/cadastrar" class="ui button">Cadastrar Empresas</a>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% empresas.forEach(function(empresa){ %>
                <div class="item">
                    <div class="content">
                        <a class="header" href="/Empresas/<%= empresa._id %>"><%= empresa.nome %></a>
                        <div class="meta">
                            <image class="image" src="<%= empresa.image %>"></image>
                        </div>
                        <div class="description">
                            <p><%- empresa.descricao.substring(0, 100) %>...</p>
                        </div>
                        <div class="meta">
                            <span><%= empresa.created.toDateString() %></span>
                        </div>
                        <div class="extra">
                            <a class="ui floated basic violet button" href="/empresas/<%= empresa._id %>">
                                Read More<i class="right chevron icon"></i></a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>



<% include partials/footer.ejs %>