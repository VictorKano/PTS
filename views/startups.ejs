<% include partials/header.ejs %>
<div class="ui main text container">
    <div class="ui huge header">Startups PTS</div>
    <a href="/startups/cadastrar" class="ui button">Cadastrar Startups</a>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% startups.forEach(function(startup){ %>
                <div class="item">
                    <div class="content">
                        <a class="header" href="/startups/<%= startup._id %>"><%= startup.nome %></a>
                        <div class="meta">
                            <image class="image" src="<%= startup.image %>"></image>
                        </div>
                        <div class="description">
                            <p><%- startup.descricao.substring(0, 100) %>...</p>
                        </div>
                        <div class="meta">
                            <span><%= startup.created.toDateString() %></span>
                        </div>
                        <div class="extra">
                            <a class="ui floated basic violet button" href="/startups/<%= startup._id %>">
                                Read More<i class="right chevron icon"></i></a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>



